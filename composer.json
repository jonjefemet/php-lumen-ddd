{
    "name": "finger/monorepo-ddd",
    "description": "Finger microservices monorepo with PHP 8.4, Lumen and DDD architecture",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "doctrine/dbal": "^4.3",
        "doctrine/migrations": "^3.9",
        "doctrine/orm": "^3.5",
        "firebase/php-jwt": "^6.0",
        "laravel/lumen-framework": "^11.0",
        "mongodb/mongodb": "^2.1.1",
        "ramsey/uuid": "^4.7",
        "symfony/http-foundation": "^7.0",
        "symfony/messenger": "^7.0",
        "symfony/routing": "^7.0",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "fakerphp/faker": "^1.24",
        "lambdish/phunctional": "^2.1",
        "mockery/mockery": "^1.6",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Finger\\": "src/",
            "Finger\\Apps\\Auth\\Backend\\": "apps/auth/backend/src/",
            "Finger\\Apps\\Backoffice\\Backend\\": "apps/backoffice/backend/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Finger\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite=unit",
        "test:integration": "phpunit --testsuite=integration",
        "test:acceptance": "behat",
        "static:analysis": [
            "@stan",
            "@psalm",
            "@ecs"
        ],
        "stan": "phpstan analyse --memory-limit=1G",
        "psalm": "psalm",
        "ecs": "ecs check --fix",
        "rector": "rector process",
        "phpmd": "phpmd src text phpmd.xml"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
